<aura:component controller="RetreiveAccountDetails" implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global"  >
	<aura:attribute name="accountList" type="Account[]" />
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
	<aura:iteration var="acc" items="{!v.accountList}">
		{!acc.Name}
	</aura:iteration> 
    
    
     <div class="slds"> 

    <table class="slds-table slds-table--bordered slds-table--striped">
        <thead>
            <tr>
                <th scope="col"><span class="slds-truncate">Name</span></th>
                <!--  <th scope="col"><span class="slds-truncate">Name</span></th> -->
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.accountList}" var="contact">
                <tr>
                    <td>{!contact.Name}</td>
                  <!--  <td>{!contact.Name}</td>   -->
                </tr>
            </aura:iteration>
        </tbody>
    </table>
        </div>
    
    
</aura:component>