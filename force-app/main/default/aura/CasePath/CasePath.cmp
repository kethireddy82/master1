<aura:component controller="CasePathController" implements="forceCommunity:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:attribute name="steps" type="String[]" default="[]"/>
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="caseObject" type="Case" default="{}"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div class="slds-box">
        <lightning:progressIndicator currentStep="{!v.caseObject.Status}" type="path" variant="base">
            <aura:iteration items="{! v.steps }" var="step">
                <lightning:progressStep label="{! step }" value="{! step }"/>
            </aura:iteration>
        </lightning:progressIndicator>
    </div>
	
</aura:component>